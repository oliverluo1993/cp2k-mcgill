&GLOBAL
  PROJECT LOC-CAYLEY
  RUN_TYPE ENERGY
  PRINT_LEVEL LOW
&END GLOBAL
&FORCE_EVAL
  METHOD Quickstep
  &DFT
    BASIS_SET_FILE_NAME BASIS_SET
    POTENTIAL_FILE_NAME POTENTIAL
    &MGRID
      CUTOFF 200
    &END MGRID
    &QS
      EPS_DEFAULT 1.0E-11
    &END QS
    &SCF
      EPS_SCF 1.0E-4
      SCF_GUESS ATOMIC
    &END SCF
    &XC
      &XC_FUNCTIONAL Pade
      &END XC_FUNCTIONAL
    &END XC
    &LOCALIZE
      METHOD CAYLEY
      &CAYLEY_OPTIMIZER
          MAX_ITER                    100
          EPS_ERROR                   1.0E-6
          LIN_SEARCH_EPS_ERROR        1.0E-3
          LIN_SEARCH_STEP_SIZE_GUESS  0.0001
          MAX_ITER_OUTER_LOOP         0
          PRECONDITIONER              NONE
          CONJUGATOR                  POLAK_RIBIERE
      &END CAYLEY_OPTIMIZER
      &PRINT
        &MOLECULAR_STATES
        &END
      &END
      !STATES ALL
      !&PRINT 
      !  &PROGRAM_RUN_INFO LOW
      !  &END PROGRAM_RUN_INFO
      !&END PRINT
      !&PRINT
      !  &WANNIER_CENTERS
      !    IONS+CENTERS
      !    FORMAT XMOL
      !  &END
      !  &MOLECULAR_DIPOLES
      !    COMMON_ITERATION_LEVELS 2
      !    PERIODIC
      !  &END
      !  &TOTAL_DIPOLE
      !    COMMON_ITERATION_LEVELS 2
      !    PERIODIC T
      !    REFERENCE COAC
      !  &END
      !&END
    &END
  &END DFT
  &SUBSYS
    &CELL
      ABC 4.0 4.0 4.0
    &END CELL
    &COORD
    O   0.000000    0.000000   -0.065587
    H   0.000000   -0.757136    0.520545
    H   0.000000    0.757136    0.520545
    &END COORD
    &KIND H
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q1
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH-PADE
      POTENTIAL GTH-PADE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
